<runtime ram="32M" caps="1000" binary="init">

	<requires> <timer/> </requires>

	<events>
		<timeout meaning="failed" sec="70" />
		<log meaning="succeeded">child "test-execve" exited with exit value 0</log>
	</events>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="posix.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="vfs"/>
		<rom label="test-execve"/>
	</content>

	<config verbose="yes">
		<parent-provides>
			<service name="ROM"/>
			<service name="LOG"/>
			<service name="CPU"/>
			<service name="PD"/>
		</parent-provides>
		<start name="test-execve" caps="300">
			<resource name="RAM" quantum="1G"/>
			<config ld_verbose="yes">
				<arg value="name_of_executeable"/>
				<arg value="100"/>
				<libc stdin="/null" stdout="/log" stderr="/log"/>
				<vfs> <rom name="test-execve"/> <null/> <log/> </vfs>
			</config>
			<route>
				<service name="ROM" label="/test-execve">
					<parent label="test-execve"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>
	</config>

</runtime>
