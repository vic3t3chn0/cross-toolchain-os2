<runtime ram="32M" caps="1000" binary="init">

	<requires> <timer/> </requires>

	<events>
		<timeout meaning="failed" sec="60" />
		<log     meaning="succeeded">--- Signalling test finished ---</log>
		<log     meaning="failed"   >Error: </log>
	</events>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="test-signal"/>
	</content>

	<config>
		<parent-provides>
			<service name="ROM"/>
			<service name="CPU"/>
			<service name="RM"/>
			<service name="PD"/>
			<service name="IRQ"/>
			<service name="IO_PORT"/>
			<service name="IO_MEM"/>
			<service name="LOG"/>
			<service name="Timer"/>
		</parent-provides>
		<default-route>
			<any-service> <parent/> <any-child/> </any-service>
		</default-route>
		<default caps="100"/>
		<start name="test-signal" caps="500">
			<resource name="RAM" quantum="10M"/>
		</start>
	</config>
</runtime>
