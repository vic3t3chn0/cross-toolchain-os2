<runtime ram="32M" caps="1000" binary="init">

	<requires> <timer/> </requires>

	<events>
		<timeout meaning="failed" sec="20" />
		<log meaning="succeeded">--- all tests finished ---</log>
		<log meaning="failed">test-block-client] Error: </log>
	</events>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="test-block-server"/>
		<rom label="test-block-client"/>
	</content>

	<config>
		<parent-provides>
			<service name="ROM"/>
			<service name="IRQ"/>
			<service name="IO_MEM"/>
			<service name="IO_PORT"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="TRACE"/>
			<service name="Timer"/>
		</parent-provides>
		<default-route>
			<any-service> <parent/> <any-child/> </any-service>
		</default-route>
		<start name="test-block-server" caps="200">
			<resource name="RAM" quantum="10M" />
			<provides><service name="Block" /></provides>
		</start>
		<start name="test-block-client" caps="200">
			<resource name="RAM" quantum="50M" />
		</start>
	</config>
</runtime>
